<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Edit a category</h2>
<a href="/admin/categories" class="btn btn-primary">Back to all categories</a>
<br><br>

<form action="/admin/categories/edit-category/<%= id %>" method="POST">
    <div class="form-group">
        <label for="">Title</label>
        <input class="form-control" type="text" name="title" id="" placeholder="Title" value="<%= title %>">
    </div>

    <button class="btn btn-default">Submit</button>
</form>

